generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  email String @unique
  password String 
  role userRole 
  needPasswordChange Boolean @default(true)
  status userStatus @default(ACTIVES)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  admin Admin?
  doctor Doctor?
  patience Patience?
  @@map("users")
}

model Admin {
  id String @id @default(uuid())
  name String
  email String @unique
  user User @relation(fields:[email], references:[email], onDelete: Cascade)
  profilePhoto String ?
  contactNumber String
  isDelete Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("admins")
}

model Doctor {
  id String @id @default(uuid())
  name String
  email String @unique
  user User @relation(fields: [email],references: [email],onDelete: Cascade)
  profilePhoto String?
  contactNo String
  address String
  registrationNumber String
  experience Int @default(0)
  gender gender
  appiontentfree Int
  qualification String
  currentWorkingPlace String
  designation String
  isDelete Boolean @default(false)
  averageRating Float
  createAt DateTime  @default(now())
  updateAt DateTime @updatedAt
  
  @@map("doctors")
} 

model Patience {
  id String @id @default(uuid()) 
  name String
  email String @unique
  user User @relation(fields: [email],references: [email])
  profilePhoto String?
  contactNumber String
  address String
  isDelete Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
} 

enum userRole {
  SUPER_ADMIN
  ADMIN 
  PATIENT
  DOCTOR
}

enum userStatus {
  ACTIVES
  BLOCKS
  DELETED
}

enum gender {
  MALE
  FEMALE
}