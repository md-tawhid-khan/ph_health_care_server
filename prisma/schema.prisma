generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  email String @unique
  password String 
  role userRole 
  needPasswordChange Boolean @default(true)
  status userStatus @default(ACTIVES)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt
  admin Admin?
  doctor Doctor?
  patience Patience?
  
  @@map("users")
}

model Admin {
  id String @id @default(uuid())
  name String
  email String @unique
  user User @relation(fields:[email], references:[email], onDelete: Cascade)
  profilePhoto String ?
  contactNumber String
  isDelete Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("admins")
}

model Doctor {
  id String @id @default(uuid())
  name String
  email String @unique
  user User @relation(fields: [email],references: [email],onDelete: Cascade)
  profilePhoto String?
  contactNo String
  address String
  registrationNumber String
  experience Int @default(0)
  gender gender
  appiontentfree Int
  qualification String
  currentWorkingPlace String
  designation String
  isDelete Boolean @default(false)
  averageRating Float @default(0.0)
  createAt DateTime  @default(now())
  updateAt DateTime @updatedAt 
  doctorSchedule DoctorSchedule[]
  doctorSpecialist DoctorSpecialist[]
  appointment Appointment[]
  prescription Prescription[]
  review Reviews[]

  @@map("doctors")
} 

model Patience {
  id String @id @default(uuid()) 
  
  name String
  email String @unique
  user User @relation(fields: [email],references: [email])
  profilePhoto String?
  contactNumber String
  address String
  isDelete Boolean @default(false)
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

 patientHealthData PatientHealthData?
  medicalReport MedicalReport[]
  appointment Appointment[]
  prescription Prescription[]
  review Reviews[]

  @@map("patiencs")
} 

model PatientHealthData {
  id String @id @default(uuid())
  patientId String @unique
  patient Patience @relation(fields: [patientId],references: [id])
  dateOfBirth String
  gender gender
  bloodGroup bloodGroup
  hasAllergies Boolean? @default(false)
  hasDiabetes Boolean?  @default(false)
  height  String
  weight  String
  smokingStatus Boolean? @default(false) 
  dieteryPreference  String?
  pregnencyStatus  Boolean? @default(false)
  mentalHealthHistory String ?
  immunizationStatus String ?
  hasPastSurgeries Boolean? @default(false)
  recentAnxiety  Boolean ? @default(false)
  recentDepression Boolean? @default(false)
  maritalStatus maritalStatus @default(UNMARRIED)
  createAt DateTime? @default(now())
  updateAt DateTime? @updatedAt

  @@map("patients_health_data")

}

model MedicalReport {
  id String @id @default(uuid())
  patientId String
  patient Patience @relation(fields: [patientId],references: [id])
  reportName  String
  reportLink String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

@@map("medicalReports")
}

model Specialitist {
  id String @id @default(uuid())
  title String
  icon String
  doctorSpacialist DoctorSpecialist[]
@@map("specialitists")
}

model DoctorSpecialist {
  specialistId String
  specialist Specialitist @relation(fields: [specialistId],references: [id])
  doctorId  String
  doctor Doctor @relation(fields: [doctorId],references: [id])

  @@id([specialistId,doctorId])
  @@map("doctorSpecialists")
}

model Schedule {
  id String @id @default(uuid())
  startDateTime DateTime 
  endDateTime DateTime
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

   doctorSchedule DoctorSchedule[] 
   appointment Appointment?
  @@map("schedules")
}

model DoctorSchedule {
  doctorId String
  doctor Doctor @relation(fields: [doctorId],references: [id])
  scheduleId String 
  schedule Schedule @relation(fields: [scheduleId],references: [id])
  isBooked Boolean  @default(false)
  appointmentId String?

  @@id([doctorId,scheduleId])
  @@map("doctorSchedules")
}

model Appointment {
    id String @id @default(uuid())
    doctorId String
    doctor Doctor @relation(fields: [doctorId],references: [id])
    patientId String
    patient Patience @relation(fields: [patientId],references: [id])
    scheduleId String @unique
    schedule Schedule @relation(fields: [scheduleId],references: [id])
    vedioCallingId String
    status AppointmentStatus @default(SCHEDULE)
    paymentStatus PaymentStatus @default(UNPAID)
    createAt DateTime @default(now())
    updateAt DateTime @updatedAt

    payment Payment?
    prescription Prescription?
    review Reviews?

    @@map("appointments")

}

model Payment {
  id String @id @default(uuid())
  appointmentId String @unique
  apppointment Appointment @relation(fields: [appointmentId],references: [id])
  amount Float
  transactionId String @unique
  status PaymentStatus @default(UNPAID)
  paymentGatewayData Json ?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

}

model Prescription {
  id String @id @default(uuid())
  patientId String
  patient Patience @relation(fields: [patientId],references: [id])
  doctorId String
  doctor Doctor @relation(fields: [doctorId],references: [id])
  appointmentId String @unique
  appointment Appointment @relation(fields: [appointmentId],references: [id])
  instruction String
  followUpDate DateTime?
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("prescriptions")

}

model Reviews {
  id String @id @default(uuid())
  appointmentId String @unique
  appointment Appointment @relation(fields: [appointmentId],references: [id])
  doctorId String
  doctor Doctor @relation(fields: [doctorId],references: [id])
  patientId String
  patient Patience @relation(fields: [patientId],references: [id])
  rating Float
  comment String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("reviews")
}

enum bloodGroup {
  A_POSITIVE
  A_NEGATIVE
  B_POSITIVE
  B_NEGATIVE
  O_POSITIVE
  O_NEGATIVE
  AB_POSITIVE
  AB_NEGATIVE
}

enum userRole {
  SUPER_ADMIN
  ADMIN 
  PATIENT
  DOCTOR
}

enum userStatus {
  ACTIVES
  BLOCKS
  DELETED
}

enum gender {
  MALE
  FEMALE
}

enum maritalStatus {
  MARRIED
  UNMARRIED
}

enum AppointmentStatus {
  SCHEDULE 
  INPROGRESS 
  COMPLETED 
  CANCELED
}

enum PaymentStatus {
   PAID 
   UNPAID
}